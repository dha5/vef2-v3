generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    String  @id @default(uuid())
  name  String  @unique
  slug  String  @unique
  questions Question[]
}

model Question {
  id         String  @id @default(uuid())
  content    String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
}